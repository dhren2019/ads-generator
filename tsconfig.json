{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@metadata/*": ["packages/metadata/*"],
      "@agent-runtime/*": ["packages/core/src/orchestrator/agent-runtime/*"],
      "@lib/*": ["packages/core/src/lib/*"],
      "@utils/*": ["packages/utils/src/*"]
    }
  }
}
